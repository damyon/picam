#!/bin/sh
set -e
case "$1" in
    configure)
    ln -s /usr/share/pyshared/picam /usr/lib/python2.7/dist-packages/
    update-rc.d -f picam defaults
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    rm -f /usr/lib/python2.7/dist-packages/picam
    update-rc.d -f picam remove
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
exit 0
